generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/database.db"
}



model Usuario {
  id            Int           @id @default(autoincrement())
  nome          String
  email         String        @unique
  role          String
  candidaturas  Candidatura[]
}


model Vaga {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String
  candidatos  Candidatura[]
}

model Candidatura {
  id       Int    @id @default(autoincrement())
  usuario  Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  vaga     Vaga    @relation(fields: [vagaId], references: [id])
  vagaId    Int
  status   String
}